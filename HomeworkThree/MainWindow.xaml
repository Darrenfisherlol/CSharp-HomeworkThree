<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas >

        <Label x:Name="fruitNameLable" Content="Fruit" Canvas.Left="180" Canvas.Top="30" Height="38" Width="62" FontSize="22"/>
        <Rectangle Height="40" Canvas.Left="161" Stroke="Black" Canvas.Top="30" Width="100"/>

        <ListBox MouseDoubleClick="fruitName_MouseDoubleClick" x:Name="fruitNameListBox" Height="178" Width="200"  Canvas.Left="111" Canvas.Top="94">

        </ListBox>


        <Label Content="Input a fruit name here" Canvas.Left="349" Canvas.Top="74" Height="34" Width="156" FontSize="14"/>

        <TextBox x:Name="fruitNameTxtbox" Canvas.Left="354" TextWrapping="Wrap" Canvas.Top="130" Width="146" Height="34"/>

        <Button Click="showPriceBtn" x:Name="inputBin" Content="Search Price Button" Canvas.Left="354" Canvas.Top="201" Height="33" Width="140" FontSize="14"/>

        <TextBox x:Name="ShowfruitNameTxtbox" Canvas.Left="540" TextWrapping="Wrap" Text="" Canvas.Top="164" Width="152" IsReadOnly="True" Height="38"/>



    </Canvas>
</Window>